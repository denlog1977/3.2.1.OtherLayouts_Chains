<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontTheme40" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/colorButton</item>
    </style>
    <style name="FontTheme40InputNumbers" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorButton</item>
        <item name="android:gravity">center|right</item>
        <!--        <item name="android:textAlignment">center</item>-->
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <!--        <item name="android:layout_weight">1</item>-->
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="FontTheme40_Orange" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/colorOrange</item>
    </style>

    <style name="FontTheme40_nobackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="FontThemeLetters" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center|center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/colorExample</item>
        <item name="android:layout_centerInParent">true</item>
<!--        <item name="android:layout_marginLeft">50dp</item>-->


    </style>

</resources>
